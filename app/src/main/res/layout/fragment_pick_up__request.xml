<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eric.easiermonashlibrary.PickUp_Request">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/ima"
        android:layout_width="134dp"
        android:layout_height="182dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_bookName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/ima"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_year1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookName1"
        app:layout_constraintLeft_toRightOf="@+id/ima"
        android:layout_marginLeft="32dp"
         />

    <TextView
        android:id="@+id/tv_author1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_year1"
        app:layout_constraintLeft_toRightOf="@+id/ima"
        android:layout_marginLeft="32dp"
         />

    <TextView
        android:id="@+id/tv_isbn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_author1"
        app:layout_constraintLeft_toRightOf="@+id/ima"
        android:layout_marginLeft="32dp"
         />

    <TextView
        android:id="@+id/tv_period1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/ima"
        app:layout_constraintTop_toBottomOf="@+id/tv_isbn1"
         />

    <Spinner
        android:id="@+id/sp_location"
        android:layout_width="377dp"
        android:layout_height="34dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/colorControlHighlight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="Location"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ima" />

    <Button
        android:id="@+id/btn_details"
        android:layout_width="224dp"
        android:layout_height="47dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        android:text="View Details"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_location" />
</android.support.constraint.ConstraintLayout>
